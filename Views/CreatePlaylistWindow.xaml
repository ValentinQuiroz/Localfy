<Window x:Class="Localfy.Views.CreatePlaylistWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Localfy.Views"
        mc:Ignorable="d"
        Title="Create Playlist" Height="400" Width="500" WindowStartupLocation="CenterOwner" Background="#FF121212" Foreground="White">
    
    <StackPanel Margin="10">
        <TextBlock Text="Name:" Margin="0,0,0,5"/>
        <TextBox x:Name="NameTxt" Margin="0,0,0,10"/>

        <TextBlock Text="Description (optional):" Margin="0,0,0,5"/>
        <TextBox x:Name="DescriptionTxt" Margin="0,0,0,10"/>
        <TextBlock Text="Image (optional):" Margin="0,0,0,5"/>

        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
            <TextBox x:Name="ImagePathTxt" MinWidth="400" Margin="0,0,0,10"/>
            <Button Content=". . ." Margin="15,0,0,0" Click="BrowseImage_Click" Background="#FF1ED760"/>
        </StackPanel>


        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Create" Click="Create_Click" Width="80" Margin="0,10,10,0" Background="#FF1ED760"/>
            <Button Content="Cancel" Click="Cancel_Click" Width="80" Margin="0,10,10,0" Background="#FF1ED760"/>
            
        </StackPanel>
    </StackPanel>
</Window>
